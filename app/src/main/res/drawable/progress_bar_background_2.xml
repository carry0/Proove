<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:height="8dp" android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_state_stop"/>
            <corners android:radius="47dp"/>
            <size android:height="8dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress" android:height="8dp" android:gravity="center">
        <scale android:scaleWidth="100%">
            <shape>
                <solid android:color="@color/progress_bar_color_2"/>
                <corners android:radius="47dp"/>
                <size android:height="8dp"/>
            </shape>
        </scale>

    </item>
</layer-list>
