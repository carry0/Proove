<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_item_device_24dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    xmlns:tool="http://schemas.android.com/tools">

    <ImageView
        android:src="@drawable/ic_test_map"
        android:id="@+id/imageView12"
        android:layout_width="149dp"
        android:layout_height="112dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_nav"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_history_nav"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        app:layout_constraintBottom_toTopOf="@+id/iv_travel"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_nav_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/tv_color"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_nav"
        app:layout_constraintTop_toTopOf="@+id/iv_nav"
        tool:text="Pr. Peremohy 12" />

    <TextView
        android:id="@+id/tv_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/tv_home_title_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_nav"
        app:layout_constraintTop_toBottomOf="@+id/tv_nav_title"
        tool:text="14 Feb. 11:15" />

    <ImageView
        android:layout_marginTop="17dp"
        android:id="@+id/iv_travel"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_travel"
        app:layout_constraintStart_toStartOf="@+id/iv_nav"
        app:layout_constraintTop_toBottomOf="@+id/iv_nav"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12" />

    <TextView
        android:id="@+id/tv_travel_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/tv_color"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_travel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_travel"
        app:layout_constraintTop_toTopOf="@+id/iv_travel"
        tool:text="46 min. 56 sec." />

    <TextView
        android:id="@+id/tv_travel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/tv_home_title_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_travel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_travel"
        app:layout_constraintTop_toBottomOf="@+id/tv_travel_title"
        tool:text="5.7 km" />


</androidx.constraintlayout.widget.ConstraintLayout>